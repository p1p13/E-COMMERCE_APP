<h1>Complete your profile</h1>
<%= form_for(@user) do |f| %>
  <p>
    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :permanent_address, "Permanent Address" %>
    <%= f.text_area :permanent_address %>
  </p>

  <p>
    <%= f.label :contact_number, "Contact Number" %>
    <%= f.text_field :contact_number %>
  </p>

  <p>
    <%= f.label :country_code, "Country Code" %>
    <%= f.text_field :country_code %>
  </p>
  
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
<p><%= link_to 'Add Shipping Details', new_user_shipping_detail_path(@user) %></p>

