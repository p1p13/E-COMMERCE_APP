<h1>Product</h1>
<p><%= @product.title %></p>
<h1>Cost</h1>
<p><%= @product.cost %></p>
</br>
<%= form_with(model: [ @cart, @cart_item ], local:true) do |f| %>
<!-- to do: product id should be sent differently-->
<p>
  <%= f.hidden_field :product_id, value: @product.id %>
</p>

<p>
  <%= f.label :quantity, "Number of Items to be added" %>
  <%= f.text_field :quantity %>
</p>

<p>
  <%= f.submit "Add to Cart" %>
</p>
<% end %>
