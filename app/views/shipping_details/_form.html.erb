<% unless @shipping_detail %>
  <%= render 'does_not_exist' %>  
<% else %>
  <%= form_with(model: [ @shipping_detail ], local:true) do |f| %>
    <p>
      <%= f.label :address_line1, "Address Line 1" %>
      <%= f.text_field :address_line1 %>
    </p>
    
    <p>
      <%= f.label :address_line2, "Address Line 2" %>
      <%= f.text_field :address_line2 %>
    </p>
    
   <p>
      <%= f.label :address_line3, "Address Line 3" %>
      <%= f.text_field :address_line3 %>
    </p>
    <p>
      <%= f.label :zip, "ZIP" %>
      <%= f.text_field :zip %>
    </p>
  
    <p>
      <%= f.label :country, "Country" %>
      <%= f.text_field :country %>
    </p>
  
    <p>
      <%= f.label :state, "State" %>
      <%= f.text_field :state %>
    </p>
    <p>
      <%= f.submit "Save" %>
    </p>
  <% end %>
<% end %>
  