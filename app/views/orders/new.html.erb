<h1>Confirm Your Order</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Quantity</th>
    <th>Cost</th>
  </tr>
  <% current_user.cart.cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.product.title %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= cart_item.product.cost * cart_item.quantity %></td>
    </tr>
  <% end %>
</table>
<%= form_with(model: [ current_user.orders.build ], local:true) do |f| %>
  <p>
    <%= f.label :payment_mode, "Payment Mode" %>
    <%= f.text_field :payment_mode %>
  </p>

  <p>
  <%= f.label :shipping_details_id, "Select Shipping Address" %>
  <%= f.collection_select :shipping_details_id, current_user.shipping_details, :id, :address_line1, :prompt => true %>
  </p>

  <p>
    <%= f.submit "Confirm" %>
  </p>
<% end %>


