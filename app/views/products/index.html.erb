<h1>PRODUCTS AVAILABLE</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>In Stock</th>
    <th>Cost</th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.in_stock %></td>
      <td><%= product.cost %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= button_to 'Add to Cart', :controller => :carts, :action => :add_to_cart, method: :post, :product_id => product.id %></td>
    </tr>
  <% end %>
</table>

